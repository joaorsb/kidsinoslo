rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{user} {
      allow read, write: if request.auth.uid != null;
    }
    match /categories/{category} {
       allow write: if request.auth.uid != null;
       allow read: if false;
    }
    match /posts/{post} {
       allow write: if request.auth.uid != null;
       allow read: if false;
    }
  }
}
